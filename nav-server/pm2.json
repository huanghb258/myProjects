{
  "name"        : "nav-server",  // 应用名称
  "script"      : "./bin/www",  // 实际启动脚本
    "cwd"         : "./",  // 当前工作路径
  "watch": true,
  "ignore_watch" : [  // 从监控目录中排除
    "node_modules", 
    "logs",
    "public",
    "myNav",
    "views"
  ],
  "max_restarts": 5,
  "env_dev": {
            "NODE_ENV": "development",   // 环境参数，当前指定为开发环境 pm2 start app.js --env_dev
            "REMOTE_ADDR": ""
  },

  "error_file" : "./logs/app-err.log",  // 错误日志路径
  "out_file"   : "./logs/app-out.log",  // 普通日志路径
 
}
